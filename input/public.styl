@import 'reset.css'

/* 引入css文件的一种方式 */
/*

-ms-filter: "progid:DXImageTransform.Microsoft.gradient(GradientType=1,startColorstr=#99ffffff,endColorstr=#99ffffff)";
filter: progid:DXImageTransform.Microsoft.gradient(startColorstr=#99ffffff,endColorstr=#99ffffff);
background:rgba(255,255,255,.8);


 filter:alpha(opacity=40); 针对 IE8 以及更早的版本 */
body
	font-size 16Px

.full-page, .full-page body
	width 100%
	height 100%

.bg-gradient
	width 100%
	height 100%
	background linear-gradient(-45deg, #276bbe 32%, #5ed5be 100%) left top / 100% 100% no-repeat

.header
	color #ffffff
	text-align center
	font-size 70px

	&.p120-0
		padding 120px 0

	.en
		vertical-align sub
		font-size 50px

.main
	.row
		padding-right 70px
		padding-left 70px

		&.pt50
			padding-top 50px

		.label
			display flex
			justify-content flex-start
			align-items center
			height 80px
			border 4px solid #ffffff
			border-radius 40px
			color #ffffff

		span
			display block
			flex 0 0 150px
			width 150px
			text-align center
			letter-spacing 3px
			font-weight bold
			font-size 44px

		.w220
			flex 0 0 220px
			width 220px

		input
			flex 1 1 auto
			height 100%
			outline none
			border none
			background none
			color #ffffff
			font-weight bold
			font-size 28px
			height 80px

			&::placeholder
				letter-spacing 1px
				font-weight bold
				font-family 'microsoft yahei'

		.sms-code
			flex 1 1 calc(100% - 4em - 220px)
			width calc(100% - 4em)

		.send
			width 3em
			color #5ed5be
			text-align center
			white-space nowrap
			font-weight bold
			font-size 27px

		.submit
			display block
			padding-left 3px
			height 80px
			border 4px solid #ffffff
			border-radius 40px
			color #ffffff
			text-align center
			letter-spacing 3px
			font-size 45px
			line-height 80px

.footer
	padding-top 20px
	color #ffffff
	text-align center
	font-size 38px
	line-height 48px

.gift-container
	width 100%
	height 100%
	background url('../img/e117ac9024a45bb5296b47c547bf914c-750+368.png') center top / 100% auto no-repeat,
		#691b4f url('../img/1316903091f7d8a7448677e1a810177f-750+628.png') center bottom / 100% auto no-repeat
	display flex
	align-items center
	justify-content center
	.round
		position relative
		overflow hidden
		img
			display block
			width 690px
			transition 3s transform ease
			transform-origin center center
		.arrow
			position absolute
			left 50%
			top 50%
			transform translate(-50%, -50%)
			width 180px
			height 180px
			cursor pointer
			img
				position absolute
				display block
				width 180px
				bottom 0
	.btn
		position absolute
		bottom 100px
		width 430px
		left 50%
		transform translate(-50%, 0)
		img
			width 100%
			display block




			
			
			
			
			
			
			
			